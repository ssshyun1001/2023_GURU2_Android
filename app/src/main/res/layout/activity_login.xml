<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_white"
    tools:context=".Login"
    tools:ignore="DuplicateIds">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/app_main"
        android:background="@null" />

    <LinearLayout
        android:id="@+id/linearLayout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/box_id"
                android:ems="10"
                android:hint="아이디 ID"
                android:text=""/>

            <EditText
                android:id="@+id/PW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/box_id"
                android:ems="10"
                android:hint="비밀번호 PW"
                android:inputType="textPassword"
                android:text=""/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="로그인 Login"
            android:textSize="16dp"
            style="@style/custom_font"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/yellow"
        android:padding="8dp"
        android:layout_below="@id/linearLayout_01"
        android:text="회원가입 / Sign Up"
        android:textSize="12sp"
        android:fontFamily="@font/nanumsquare_round_eb"/>
</RelativeLayout>