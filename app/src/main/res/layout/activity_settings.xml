<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="설정"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/set_option_menu_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:background="@drawable/baseline_menu_24"
            android:backgroundTint="@color/yellow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="긴급 연락처"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/contact_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"/>

            <EditText
                android:id="@+id/edit_text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="연락처 입력"
                android:inputType="phone"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/add_contact_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처 추가 +"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/delete_contact_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처 삭제 -"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Siren Sound Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이렌 소리"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <RadioGroup
                android:id="@+id/radio_group_siren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_siren1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="경찰차"/>

                <RadioButton
                    android:id="@+id/radio_siren2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="소방차"/>

                <RadioButton
                    android:id="@+id/radio_siren3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구급차"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/siren_apply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적용"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/siren_test_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEST"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Location Update Frequency Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 전송 주기"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <Spinner
                android:id="@+id/spinner_location_update_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <!-- SOS Message Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS 메세지 설정"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/sos_message_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edit_text_sosmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SOS 메세지"
                android:inputType="textMultiLine"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/sos_init_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초기화"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/sos_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/sos_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Logout Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동 로그인 해제"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/red"
                android:backgroundTint="@color/light_gray"
                android:text="로그아웃"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
