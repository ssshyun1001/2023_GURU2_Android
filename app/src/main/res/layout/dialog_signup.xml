<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="30dp"
    android:padding="20dp">

    <Button
        android:id="@+id/signup_back_btn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/app_icon_back"
        android:backgroundTint="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquare_round_eb"/>

    <EditText
        android:id="@+id/signupID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_id"
        android:ems="10"
        android:hint="아이디 (8~12자리/영문 소문자, 숫자)"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/checkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="중복확인"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/nanumsquare_round_eb"/>

    <EditText
        android:id="@+id/signupPW"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_id"
        android:ems="10"
        android:hint="비밀번호 (8~12자리/영문 소문자, 숫자)"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/textPhone"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_id"
        android:inputType="phone"
        android:ems="10"
        android:hint="휴대폰번호"
        android:textSize="15dp"/>



    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:text="회원가입"
        style="@style/custom_font"/>
</LinearLayout>
